<% include ./partials/header %>

<div class="jumbotron" id="home-jumbotron">	
	<div id="header">
		<h4 id="section"></h4>
		<h2 id="intro"></h2>
		<p id="detail"></p>
		<a href="#" class="btn btn-default" id="learn-more">Learn more</a>
	</div>
	<div id="tab-menu">
		<div class="row">
			<button class="col-md-3 col-sm-12 col-xs-12 tab-menu-obj" id="about-me">
				<picture class="icon">
					<source srcset="/images/about-me.webp" type="image/webp">
					<source srcset="/images/about-me.png" type="image/png">
					<img src="/images/about-me.png" width="40" height="40">
				</picture>
				<h3 id="tab-menu-header">About Me</h3>
			</button>	
			<button class="col-md-3 col-sm-12 col-xs-12 tab-menu-obj" id="projects">
				<picture>
					<source srcset="/images/projects.webp" type="image/webp">
					<source srcset="/images/projects.png" type="image/png">
					<img src="/images/projects.png" class="icon" width="40" height="40">
				</picture>
				<h3 id="tab-menu-header">Projects</h3>
			</button>	
			<button class="col-md-3 col-sm-12 col-xs-12 tab-menu-obj" id="inspiration">
				<picture>
					<source srcset="/images/inspiration.webp" type="image/webp">
					<source srcset="/images/inspiration.png" type="image/png">
					<img src="/images/inspiration.png" class="icon" width="40" height="40">
				</picture>
				<h3 id="tab-menu-header">Inspiration?</h3>
			</button>	
			<button class="col-md-3 col-sm-12 col-xs-12 tab-menu-obj" id="contact">
				<picture>
					<source srcset="/images/contact.webp" type="image/webp">
					<source srcset="/images/contact.png" type="image/png">
					<img src="/images/contact.png" class="icon" width="40" height="40">
				</picture>
				<h3 id="tab-menu-header">Contact</h3>
			</button>	
		</div>
	</div>
	<div class="header-overlay"></div>
</div>

<% include ./partials/about %>

<div class="container" id="showcase">

	<h3 id="projects-sub-title">Latest work</h3>

	<h3 id="projects-title">My Projects</h3>

	<div class="card-columns">
		<% projects.slice(0, 6).forEach(function(project) {%>
	 	<div class="card" data-aos="fade-down" data-aos-once="true">
		    <div id="img-container">
		    	<picture>
		    		<source srcset="<%= project.image %>" type="image/webp">
		    		<source srcset="<%= project.imageFallBack %>" type="image/png">
		    		<img class="card-img-top img-fluid" src="<%= project.imageFallBack %>" alt="Card image cap" align="middle">
		    	</picture>
		    	<a href="<%= project.url %>"><div class="img-overlay"></div></a>
		    </div>
		    <div class="card-block">
		    	<h3 class="card-category"><%= project.category %></h3>
		      	<h3 class="card-title"><%= project.title %></h3>
		      	<div class="card-hr"></div>
		      	<p class="card-text"><%= project.content %></p>
		    </div>
	  	</div>
	  	<% }); %>	 
	</div>
</div>

<script type="text/javascript" src="/scripts/home.js"></script>

<% include ./partials/footer %>